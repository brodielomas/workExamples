<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: #000000">
    <form id="form1" runat="server">
        <div class="row" style="margin-top: 20px">
            <nav class="navbar navbar-expand-lg navbar-light bg-success col-10 offset-1">
                @Html.ActionLink("Navigation", "Index", "WebForm1.aspx", null, new { @class = "navbar-brand text-white" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            @Html.ActionLink("Page 1", "Index", "WebForm1.aspx", null, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Page 2", "Index", "WebForm2.aspx", null, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Page 3", "MVCPageView", "Home", null, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Details", "Index", "Details.aspx", null, new { @class = "nav-link text-white" })
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="container body-content">
            <div class="row">
                <div class="col-10 offset-1">
                    <h2 class="mainHeading text-center" ><br>Fun Things To Do In Quarantine!<br /></h2>
                    <h3 class="underHeading text-center" >MVC Page</h3>
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <footer class="text-center footerCustom">
            &copy; Brodie Lomas
        </footer>
    </form>






    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
